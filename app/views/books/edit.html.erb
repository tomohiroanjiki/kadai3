<% if @book.errors.any? %>
   <p>error</p>
<% end %>
<div class='container'>
    <div class='row'>
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
          <h3>Editing Book</h3>
          <%= form_with model: @book, local:true do |f| %>
          <div>
        <%= f.label :Title %><br>
        <%= f.text_field :title, autofocus: true, :placeholder =>"#{@book.title}" %>
    </div>
    <div>
        <%= f.label :Opinion %><br>
        <%= f.text_area :body, :placeholder =>"#{@book.body}" %>
    </div>
    <div><%= f.submit "Update Book",  class: "btn btn-success" %></div>
<% end %>
<a><%= link_to "Show", book_path(@book) %></a> |
<a><%= link_to "Back", books_path %></a>

    <footer>
  <div class='container mt-5'>
  	<div class='row'>
    	<div class='mx-auto'>
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
</footer>