<% if book.errors.any? %>
  <div class="alert alert-warning">
    <h1>error</h1>
    <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= flash[:notice] %>
<%= flash[:success] %>
<%= flash[:seiko] %>
<p id="notice"></p>
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <table class='table'>
        <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "sample-author1.jpg" %>
        <th>name</th>
        <th class="profile-name"><%= user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th class="profile-introduction"><%= user.introduction %></th>
        </tr>
      </table>
      <%= link_to edit_user_path (user)  do %>
        <p class="btn btn-outline-secondary btn-block fas fa-user-cog"></p>
      <% end %>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: book, local:true do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <%= f.text_area :body, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Create Book", class: "btn btn-success col-xs-12" %>
        </div>
      <% end %>
    </div>
