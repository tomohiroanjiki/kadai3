<%= render 'users/list', user: @user, book: @book %>
<div class='col-md-8 offset-md-1'>
  <h3>Books</h3>
  <table class="table table-striped">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <% @books.each do |book|%>
    <tr>
      <th><%= link_to user_path(book.user.id) do %>
            <%= attachment_image_tag book.user, :profile_image, format: 'jpeg', fallback: "sample-author1.jpg", size: "40x40" %></th>
          <% end %>
      <th>
        <%= link_to book_path(book.id) do %>
        <%= book.title %>
        <% end %>
      </th>
      <th><%= book.body %></th>
    </tr>
    <% end %>
  </table>
</div>