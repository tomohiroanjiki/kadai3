<% if @user.errors.any? %>
  <div class="alert alert-warning">
    <h1>error</h1>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model:@user, local:true do |f| %>
      <div class="form-group">
        <label for="user_name">Name</label>
      <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", class: "form-control" %>
      </div>
      <label for="inputImage">Image</label>
      <br>
      <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
      <br>
      <div class="form-group">
        <label for="user_introduction">Introduction</label>
        <%=  f.text_area :introduction, class: "form-control introduction" %>
	    </div>
	    <%= f.submit "Update User", class: "btn btn-secondary" %>
	    <% end %>
	   </div>
	 </div>
</div
    </main>
    <footer>
  <div class='container mt-5'>
  	<div class='row'>
    	<div class='mx-auto'>
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
</footer>